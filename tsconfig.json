{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist",
    "strict": false, // to avoid "you need declarations" error
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "removeComments": true,
    "preserveConstEnums": true,
  }
}